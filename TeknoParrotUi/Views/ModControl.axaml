<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:TeknoParrotUi.Views"
             mc:Ignorable="d" d:DesignHeight="175" d:DesignWidth="750"
             x:Class="TeknoParrotUi.Views.ModControl">
    <Grid x:Name="uiGrid"
         Height="160"
         Margin="0,0,0,10"
         Background="#FFBFBFBF">
        <Grid.RowDefinitions>
            <RowDefinition Height="68*" />
            <RowDefinition Height="86*" />
            <RowDefinition Height="19*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="171*" />
            <ColumnDefinition Width="404*" />
            <ColumnDefinition Width="145*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="labelModName"
                  Width="151"
                  Height="52"
                  Margin="10,10,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Text="MOD NAME"
                  TextWrapping="Wrap" />
                  
        <TextBlock x:Name="labelGameName"
                  Grid.Row="1"
                  Width="151"
                  Margin="10,2,0,35"
                  HorizontalAlignment="Left"
                  TextWrapping="Wrap">
            <Run Text="Game:" />
            <LineBreak />
            <Run />
            <LineBreak />
            <Run Text="GAME MOD APPLIES TO" />
        </TextBlock>
        
        <TextBlock x:Name="buttonDescription"
                  Grid.RowSpan="2"
                  Grid.Column="1"
                  Height="130"
                  Margin="14,10,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Background="#FFEEEEEE"
                  Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis tempus venenatis arcu, vel aliquam est dictum quis. In vel convallis urna. Vestibulum venenatis laoreet purus vel aliquam. Sed rutrum ante sed dapibus rhoncus. Vestibulum ut nibh at sapien malesuada vehicula a lobortis libero. Curabitur porta luctus lacus eu convallis. Duis nec nisl cursus, dapibus nulla vel, feugiat arcu. Mauris molestie libero nec ante facilisis vestibulum. Nulla pharetra feugiat risus sed sodales. Phasellus et venenatis dui."
                  TextWrapping="Wrap" />
                  
        <Button x:Name="buttonDl"
               Grid.Column="2"
               Height="29"
               Margin="10,33,10,0"
               VerticalAlignment="Top"
               Click="buttonDl_Click"
               Content="Download" />
               
        <Button Grid.Row="1"
               Grid.Column="2"
               Width="125"
               Height="29"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Apply"
               IsVisible="False" />
               
        <TextBlock x:Name="tbCreator"
                  Grid.Row="1"
                  Width="150"
                  Height="20"
                  Margin="10,50,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Text="TextBlock"
                  TextWrapping="Wrap" />
    </Grid>
</UserControl>