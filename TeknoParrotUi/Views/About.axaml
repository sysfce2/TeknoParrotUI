<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:TeknoParrotUi.Views"
             mc:Ignorable="d" d:DesignHeight="580" d:DesignWidth="800"
             x:Class="TeknoParrotUi.Views.About">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62" />
            <RowDefinition Height="27" />
            <RowDefinition Height="93" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Title and Version -->
        <StackPanel Grid.Row="0" 
                   Margin="5,0"
                   HorizontalAlignment="Center"
                   Orientation="Horizontal">
            <TextBlock Width="345"
                      Height="68"
                      Margin="5,0,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Text="TeknoParrot UI"
                      FontSize="48" />
            <TextBlock x:Name="versionText"
                      Width="79"
                      Height="44"
                      Margin="10,13,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      FontSize="36"
                      Text="X.XX" />
        </StackPanel>
        
        <!-- Credits Label -->
        <TextBlock Grid.Row="1"
                  Width="95"
                  Height="25"
                  Margin="0,0,0,0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Text="Credits" />
        
        <!-- Social Icons -->
        <StackPanel Grid.Row="2"
                   Margin="5,2,5,2"
                   HorizontalAlignment="Center"
                   Orientation="Horizontal">
            <!-- Discord -->
            <Button Width="82" 
                   Height="90" 
                   Margin="5,0,0,0"
                   Cursor="Hand"
                   Click="Discord_Click">
                <PathIcon Data="{StaticResource DiscordIcon}" Width="48" Height="48" />
            </Button>
            
            <!-- Website -->
            <Button Width="82" 
                   Height="90" 
                   Margin="5,0,0,0"
                   Cursor="Hand"
                   Click="Website_Click">
                <PathIcon Data="{StaticResource WebIcon}" Width="48" Height="48" />
            </Button>
            
            <!-- GitHub -->
            <Button Width="82" 
                   Height="90" 
                   Margin="5,0,0,0"
                   Cursor="Hand"
                   Click="GitHub_Click">
                <PathIcon Data="{StaticResource GitHubIcon}" Width="48" Height="48" />
            </Button>
        </StackPanel>
        
        <!-- Components List -->
        <ListBox x:Name="components"
                Grid.Row="3"
                Margin="10" />
    </Grid>
</UserControl>