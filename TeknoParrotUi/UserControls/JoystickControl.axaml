<UserControl
    x:Class="TeknoParrotUi.UserControls.JoystickControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TeknoParrotUi"
    xmlns:common="using:TeknoParrotUi.Common"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TeknoParrotUi.Properties"
        xmlns:helpers="clr-namespace:TeknoParrotUi.Helpers"
    d:DesignHeight="706"
    d:DesignWidth="700"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="Inter"
    Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d"
    xmlns:usercontrols="using:TeknoParrotUi.UserControls"
    x:DataType="usercontrols:JoystickControl">
    <UserControl.Styles>
<Style Selector="ToolTip">
    <Setter Property="Width" Value="250" />
    <Setter Property="MaxHeight" Value="NaN" />
    <Setter Property="Template">
        <ControlTemplate>
            <Border
                Name="Border"
                Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}"
                BorderBrush="DarkGray"
                BorderThickness="1"
                BoxShadow="0 2 10 0 #66000000"
                CornerRadius="8">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Offset="0.0" Color="Snow" />
                        <GradientStop Offset="1.0" Color="DarkGray" />
                    </LinearGradientBrush>
                </Border.Background>
                <Panel>
                    <Image
                        HorizontalAlignment="Right"
                        Source="/Resources/teknoparrot_by_pooterman-db9erxd.png"
                        Opacity="0.2"
                        Stretch="Uniform" />
                    <StackPanel>
                        <TextBlock
                            Margin="5"
                            FontSize="18"
                            FontStyle="Italic"
                            FontWeight="UltraBold"
                            Foreground="#FF000000"
                            Text="TeknoHint"
                            TextAlignment="Center"
                            TextDecorations="Underline">
                        </TextBlock>
                        <TextBlock
                            Margin="5"
                            FontSize="18"
                            FontStretch="UltraExpanded"
                            Foreground="#FF000000"
                            Text="{TemplateBinding Content}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Panel>
            </Border>
        </ControlTemplate>
    </Setter>
</Style>
    </UserControl.Styles>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="343*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="640*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <!-- Using ItemsControl with header in Avalonia instead of HeaderedItemsControl from WPF -->
            <ItemsControl x:Name="JoystickMappingItems">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="common:JoystickButtons">
                        <!-- UniformGrid equivalent in Avalonia -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <!-- Left side for ButtonName and BindName - fixed width -->
                                <ColumnDefinition Width="*" MinWidth="300"/>
                                <!-- Right side for ComboBox - fixed width -->
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- For ButtonName and BindName side by side -->
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <!-- Fixed width instead of Auto -->
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Button name label -->
                                <TextBlock
                                    Grid.Column="0"
                                    Loaded="Control_Loaded"
                                    Tag="{Binding}"
                                    Text="{Binding ButtonName}"
                                    ToolTip.Tip="{Binding Hint}" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>
                                    
                                <!-- Input binding textbox -->
                                <TextBox
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ContextMenu="{x:Null}"
                                    IsReadOnly="true"
                                    Loaded="Control_Loaded"
                                    GotFocus="TextBox_GotFocus"
                                    LostFocus="TextBox_LostFocus"
                                    SelectionBrush="Transparent"
                                    Tag="{Binding}"
                                    Text="{Binding BindName}"
                                    ToolTip.Tip="{Binding Hint}"
                                    Unloaded="TextBox_Unloaded" />
                            </Grid>
                            
                            <!-- ComboBox -->
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                Width="120"
                                IsTextSearchEnabled="False"
                                Loaded="Control_Loaded"
                                Tag="{Binding}"
                                ToolTip.Tip="{Binding Hint}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Grid
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Height="49"
            VerticalAlignment="Top">
            <!-- Remove the ColumnDefinitions entirely -->
            
            <!-- Back button - Left side -->
            <Button
                HorizontalAlignment="Left"
                Width="NaN"
                MaxHeight="40"
                Margin="5"
                Click="JoystickGoBack_OnClick"
                Content="{x:Static helpers:ResourceProvider.Back}" />
            
            <!-- Save Settings button - Right side -->
            <Button
                HorizontalAlignment="Right"
                Width="NaN"
                MaxHeight="40"
                Margin="5"
                Click="ButtonBase_OnClick"
                Content="{x:Static helpers:ResourceProvider.SettingsSaveSettings}" />
        </Grid>
    </Grid>
</UserControl>